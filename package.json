{
  "name": "pokeclaude",
  "version": "2.0.0",
  "description": "Pokemon TCG Pocket MCP server and CLI for deck building, card analysis, and competitive strategy",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "author": "Brian Sunter",
  "bin": {
    "pokeclaude": "./dist/cli.js"
  },
  "files": [
    "dist",
    "data",
    "skills",
    "commands",
    "references",
    ".claude-plugin",
    ".mcp.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/briansunter/pokeclaude.git"
  },
  "keywords": [
    "mcp",
    "pokemon",
    "pokemon-pocket",
    "tcg",
    "duckdb",
    "model-context-protocol",
    "claude",
    "deck-builder",
    "card-games"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "bun run build",
    "start": "bun dist/cli.js",
    "dev": "bun cli.ts",
    "mcp": "bun cli.ts mcp",
    "typecheck": "tsc --noEmit",
    "test": "bun test --timeout 120000",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome check --write",
    "scrape": "cd scraper && bun run scrape",
    "scrape:full": "cd scraper && bun run scrape:full"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.4.0-r.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@robingenz/zli": "^0.2.0",
    "cli-table3": "^0.6.5",
    "uuid": "^11.0.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
