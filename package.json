{
  "name": "pokeclaude",
  "version": "1.0.0",
  "description": "Pokemon Pocket TCG MCP Server and Data Scraper",
  "private": true,
  "workspaces": [
    "mcp-server",
    "scraper"
  ],
  "scripts": {
    "scrape": "cd scraper && npm run scrape",
    "scrape:full": "cd scraper && npm run scrape:full",
    "build": "cd mcp-server && npm run build",
    "typecheck": "cd mcp-server && npm run typecheck && cd ../scraper && npm run typecheck",
    "dev": "cd mcp-server && npm run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "semantic-release": "^24.0.0"
  }
}
