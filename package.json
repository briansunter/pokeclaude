{
  "name": "pokeclaude",
  "version": "1.0.0",
  "description": "Pokemon Pocket TCG MCP Server and Data Scraper",
  "private": true,
  "workspaces": [
    "mcp-server",
    "scraper"
  ],
  "scripts": {
    "scrape": "npm run scrape -w scraper",
    "scrape:full": "npm run scrape:full -w scraper",
    "build": "npm run build -w mcp-server",
    "typecheck": "npm run typecheck -w mcp-server && npm run typecheck -w scraper",
    "dev": "npm run dev -w mcp-server"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.0",
    "@semantic-release/npm": "^12.0.0",
    "semantic-release": "^24.0.0"
  }
}
