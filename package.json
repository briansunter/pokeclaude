{
	"name": "pokeclaude",
	"version": "3.0.2",
	"description": "Pokemon TCG Pocket MCP server and CLI for deck building, card analysis, and competitive strategy",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"license": "MIT",
	"author": "Brian Sunter",
	"bin": {
		"pokeclaude": "./dist/cli.js"
	},
	"files": [
		"dist",
		"data",
		"skills",
		"commands",
		"references",
		".claude-plugin",
		".mcp.json",
		"README.md"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/briansunter/pokeclaude.git"
	},
	"keywords": [
		"mcp",
		"pokemon",
		"pokemon-pocket",
		"tcg",
		"duckdb",
		"model-context-protocol",
		"claude",
		"deck-builder",
		"card-games"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "bun run build",
		"start": "bun dist/cli.js",
		"dev": "bun cli.ts",
		"mcp": "bun cli.ts mcp",
		"typecheck": "tsc --noEmit",
		"test": "bun test --timeout 120000",
		"test:coverage": "echo 'Note: bun test coverage is experimental. See: https://bun.sh/docs/test/coverage' && bun test --coverage 2>/dev/null || bun test",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"format": "biome check --write",
		"scrape": "cd scraper && bun run scrape",
		"scrape:full": "cd scraper && bun run scrape:full",
		"prepare": "simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run typecheck && bun run lint:fix",
		"pre-push": "bun run test"
	},
	"dependencies": {
		"@duckdb/node-api": "^1.4.0-r.2",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"@robingenz/zli": "^0.2.0",
		"cli-table3": "^0.6.5",
		"pino": "^10.3.0",
		"pino-pretty": "^13.1.3",
		"uuid": "^11.0.3",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.0.0",
		"@semantic-release/npm": "^12.0.0",
		"@types/node": "^22.19.7",
		"@types/uuid": "^10.0.0",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"semantic-release": "^25.0.0",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.7.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
