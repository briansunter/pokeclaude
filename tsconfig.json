{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["index.ts", "cli.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "mcp-server", "scraper", "claude-plugins"]
}
